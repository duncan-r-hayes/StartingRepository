@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "READ USER";
}
<div style="padding-bottom:15px;">
    <h1 class="info text-white">User Adminastration</h1>
    <a asp-action="Create" class="btn btn-secondary">Create a User</a>
    <a asp-controller="Area" asp-action="Index">View Areas</a> | 
    <a asp-controller="WorkCenter" asp-action="Index">View Work Centers</a> | 
    <a asp-controller="Location" asp-action="Index">View Locations</a>
</div>
<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (AppUser user in Model)
    {
<tr>
    <td>@user.Id</td>
    <td>@user.UserName</td>
    <td>
        <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">
            Update
        </a>
    </td>
    <td>
        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
            <button type="submit" class="btn btn-sm btn-danger">
                Delete
            </button>
        </form>
    </td>
</tr>
    }
</table>
<a asp-action="Index" asp-controller="Role" style="float:right;">Manage User Roles</a>
<style>
    h1 {
        text-align: center;
        background-color: #0449b8;
    }
</style>